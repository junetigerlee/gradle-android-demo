<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_orders_top_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="20dp"
            android:text="@string/myorders_order_manage"
            android:textColor="@color/grey"
            android:textSize="@dimen/h2" />

        <TextView
            android:id="@+id/tv_grab_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:paddingTop="20dp"
            android:text="@string/myorders_grab_goods"
            android:textColor="@color/grey"
            android:textSize="@dimen/h2" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:background="@drawable/left_radio_group_bg"
            android:orientation="vertical" >

            <cn.com.incito.wisdom.uicomp.widget.radiogroup.CustomRadioGroup
                android:id="@+id/crg_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbtn_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_radiobutton_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/myorders_order_all"
                        android:textColor="@color/left_radiobutton_text_color"
                        android:textSize="@dimen/h3" />

                    <Button
                        android:id="@+id/btn_all_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/total"
                        android:text="0"
                        android:textColor="@color/oringe" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbtn_received"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_radiobutton_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/myorders_order_receive"
                        android:textColor="@color/left_radiobutton_text_color"
                        android:textSize="@dimen/h3" />

                    <Button
                        android:id="@+id/btn_received_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/total"
                        android:text="0"
                        android:textColor="@color/oringe" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbtn_obligation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_radiobutton_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/myorders_order_obligation"
                        android:textColor="@color/left_radiobutton_text_color"
                        android:textSize="@dimen/h3" />

                    <Button
                        android:id="@+id/btn_payorder_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/total"
                        android:text="0"
                        android:textColor="@color/oringe" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbtn_distribution"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_radiobutton_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/myorders_order_distribution"
                        android:textColor="@color/left_radiobutton_text_color"
                        android:textSize="@dimen/h3" />

                    <Button
                        android:id="@+id/btn_pickingorder_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/total"
                        android:text="0"
                        android:textColor="@color/oringe" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <RadioButton
                        android:id="@+id/rbtn_sign"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_radiobutton_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/myorders_order_sign"
                        android:textColor="@color/left_radiobutton_text_color"
                        android:textSize="@dimen/h3" />

                    <Button
                        android:id="@+id/btn_signorder_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/total"
                        android:text="0"
                        android:textColor="@color/oringe" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" >

                    <RadioButton
                        android:id="@+id/rbtn_evaluated"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_radiobutton_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/myorders_order_evaluate"
                        android:textColor="@color/left_radiobutton_text_color"
                        android:textSize="@dimen/h3" />

                    <Button
                        android:id="@+id/btn_evelorder_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/total"
                        android:text="0"
                        android:textColor="@color/oringe" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line"
                    android:visibility="invisible" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible" >

                    <RadioButton
                        android:id="@+id/rbtn_canceled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/left_radiobutton_bg"
                        android:button="@null"
                        android:paddingBottom="10dp"
                        android:paddingLeft="30dp"
                        android:paddingTop="10dp"
                        android:text="@string/myorders_order_cancele"
                        android:textColor="@color/left_radiobutton_text_color"
                        android:textSize="@dimen/h3" />

                    <Button
                        android:id="@+id/btn_cancelorder_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/total"
                        android:text="0"
                        android:textColor="@color/oringe" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/divide_line"
                    android:visibility="invisible" />
            </cn.com.incito.wisdom.uicomp.widget.radiogroup.CustomRadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RadioGroup
                android:id="@+id/rg_date_tabs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rbtn_in_three_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:checked="true"
                    android:padding="10dp"
                    android:text="@string/myorders_order_three_months_inside"
                    android:textColor="@color/month_text_color"
                    android:textSize="@dimen/h3" />

                <RadioButton
                    android:id="@+id/rbtn_three_months_away"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:button="@null"
                    android:padding="10dp"
                    android:text="@string/myorders_order_three_months_outside"
                    android:textColor="@color/month_text_color"
                    android:textSize="@dimen/h3" />
            </RadioGroup>

            <FrameLayout
                android:id="@+id/content_frame"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/my_order_list_bg"
                android:orientation="vertical" >
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>