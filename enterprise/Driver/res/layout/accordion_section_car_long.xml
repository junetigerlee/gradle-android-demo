<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/left_search_expand_bg"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="5dp"
    android:visibility="visible" >

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/usual_long1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:background="@drawable/left_search_button"
            android:text="1-5"
            android:textColor="@color/boardgoods_btntext_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/usual_long2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left_search_button"
            android:text="5-10"
            android:textColor="@color/boardgoods_btntext_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/usual_long3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left_search_button"
            android:text="10-20"
            android:textColor="@color/boardgoods_btntext_color"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/usual_long4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left_search_button"
            android:text="不限"
            android:textColor="@color/boardgoods_btntext_color"
            android:textSize="15sp" />

        <Button
            android:id="@+id/usual_long5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/left_search_button"
            android:text="更多..."
            android:textColor="@color/boardgoods_btntext_color"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>