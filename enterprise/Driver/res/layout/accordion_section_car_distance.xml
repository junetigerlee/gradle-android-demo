<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
   xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:paddingTop="5dp"
   android:paddingBottom="20dp"
   android:paddingLeft="5dp"
   android:paddingRight="5dp"
   android:background="@drawable/left_search_expand_bg"
   android:orientation="vertical"
   android:visibility="visible">
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <Button
         android:id="@+id/usual_distance1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/left_search_button"
         android:textColor="@color/boardgoods_btntext_color"
         android:textSize="15sp"
         android:layout_weight="1"
         android:text="50" />
      <Button
         android:id="@+id/usual_distance2"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:background="@drawable/left_search_button"
         android:text="100"
         android:textColor="@color/boardgoods_btntext_color"
         android:textSize="15sp" />
      <Button
         android:id="@+id/usual_distance3"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/left_search_button"
         android:textColor="@color/boardgoods_btntext_color"
         android:textSize="15sp"
         android:layout_weight="1"
         android:text="200" />
   </LinearLayout>
   <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal">
      <Button
         android:id="@+id/usual_distance4"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@drawable/left_search_button"
         android:textColor="@color/boardgoods_btntext_color"
         android:textSize="15sp"
         android:layout_weight="1"
         android:text="不限" />
   </LinearLayout>
</LinearLayout>


